<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="12dp"
    tools:background="@color/black">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearlayout_karoo_shift_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_karoo_shift_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white_100"
                android:textSize="34sp"
                android:textStyle="bold"
                tools:text="S2" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.valterc.ki2.views.ChangeShiftModeButtonView
            android:id="@+id/changeshiftmodebuttonview_karoo_shift_mode_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:layout_weight=".4"
            android:contentDescription="@string/text_change_mode"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/textview_karoo_shift_mode_waiting_for_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_waiting_for_data"
        android:textAlignment="center"
        android:textColor="@color/white_100"
        android:textSize="24sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>